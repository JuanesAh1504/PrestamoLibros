@model Biblioteca.Models.Libro
@{
    ViewData["Title"] = "Libros";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form asp-action="Libro_Guardar" asp-controller="Control" method="post">
    <input type="hidden" asp-for="IdLibro" />

    <div class="form-group">
        <label class="form-label" asp-for="NombreLibro">Nombre libro</label>
        <input type="text" class="form-control" asp-for="NombreLibro">
    </div>
    <div class="form-group">
        <label class="form-label" asp-for="Autor">Autor</label>
        <input type="text" class="form-control" asp-for="Autor">
    </div>

    <hr />
    @if (Model.IdLibro == 0)
    {
        <button class="btn btn-primary" type="submit">Crear</button>
    }
    else
    {
        <button class="btn btn-primary" type="submit">Actualizar</button>

    }
    <a class="btn btn-dark btn-sm" asp-action="Control" asp-controller="Libros_Listar">Volver</a>
</form>

