@model Biblioteca.Models.Libro
@{
    ViewData["Title"] = "Libros";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form asp-action="Libro_Eliminar" asp-controller="Control" method="post">
    <input type="hidden" asp-for="IdLibro" />

    <div class="form-group">
        <label class="form-label" asp-for="NombreLibro">Nombre libro</label>
        <input type="text" class="form-control" asp-for="NombreLibro" disabled>
    </div>
    <div class="form-group">
        <label class="form-label" asp-for="Autor">Autor</label>
        <input type="text" class="form-control" asp-for="Autor" disabled>
    </div>

    <hr />
    <button class="btn btn-danger" type="submit">Eliminar</button>
    <a class="btn btn-dark btn-sm" asp-action="Control" asp-controller="Libros_Listar">Volver</a>
</form>

