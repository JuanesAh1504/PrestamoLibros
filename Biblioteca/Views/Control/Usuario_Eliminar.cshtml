@model Biblioteca.Models.Usuario
@{
    ViewData["Title"] = "Usuario_Guardar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<hr />
<a class="btn btn-primary btn-sm" asp-controller="Control" asp-action="Usuario_Guardar" asp-route-IdUsuario="0">Crear nuevo usuario</a>
<br />
<br />
<form asp-action="Usuario_Eliminar" asp-controller="Control" method="post">
    <input type="hidden" asp-for="IdUsuario" />
    <div class="form-group">
        <label class="form-label" asp-for="Nombre">Nombre</label>
        <input type="text" class="form-control" asp-for="Nombre" disabled>
    </div>
    <div class="form-group">
        <label class="form-label" asp-for="Apellido">Apellido</label>
        <input type="text" class="form-control" asp-for="Apellido" disabled>
    </div>
    <div class="form-group">
        <label class="form-label" asp-for="Identificacion">Identificación</label>
        <input type="text" class="form-control" asp-for="Identificacion" disabled>
    </div>
    <hr />
    <button class="btn btn-danger" type="submit">Eliminar</button>
    <a class="btn btn-dark btn-sm" asp-action="Control" asp-controller="Usuario_Listar">Volver</a>
</form>

