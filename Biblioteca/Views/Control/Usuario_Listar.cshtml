@model List<Biblioteca.Models.Usuario>
@{
    ViewData["Title"] = "Usuarios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Listado de usuarios registrados</h1> &nbsp;&nbsp;&nbsp;&nbsp; 
<hr />
<a class="btn btn-primary btn-sm" asp-controller="Control" asp-action="Usuario_Guardar" asp-route-IdUsuario="0">Crear nuevo usuario</a>
<br /><br />
<table class="table table-striped table-hover">
    <thead>
        <tr class="table-primary">
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Identificación</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.Nombre</td>
                <td>@item.Apellido</td>
                <td>@item.Identificacion</td>
                <td><a class="btn btn-sm btn-warning" asp-action="Usuario_Guardar" asp-controller="Control" asp-route-IdUsuario="@item.IdUsuario">Editar</a>
                    <a class="btn btn-sm btn-danger" asp-action="Usuario_Eliminar" asp-controller="Control" asp-route-IdUsuario="@item.IdUsuario">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

